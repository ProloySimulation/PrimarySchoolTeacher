<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_all"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etLoginUser"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/dpelogo1" />

    <EditText
        android:id="@+id/etLoginUser"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_above="@+id/etLoginPass"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/text_field_design"
        android:ems="10"
        android:hint="  Username"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="13sp"
        android:textColor="#946D6D"
        android:textColorHint="#CEA4A4" />

    <EditText
        android:id="@+id/etLoginPass"
        android:layout_above="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/text_field_design"
        android:hint="  Password"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="13sp"
        android:textColor="#946D6D"
        android:textColorHint="#CEA4A4" />

    <CheckBox
        android:id="@+id/checkID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_login"
        android:layout_alignStart="@+id/etLoginPass"
        android:layout_marginStart="-7dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="35dp"
        android:buttonTint="#fff"
        android:text="Remember me."
        android:textColor="#fff"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/text_view_forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_login"
        android:text="Forget password ?"
        android:textSize="10sp"
        android:layout_alignRight="@+id/etLoginPass"
        android:layout_alignBaseline="@id/checkID"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/button_login"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="82dp"
        android:background="@drawable/button_design"
        android:text="Log in"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold">


    </Button>

</RelativeLayout>